{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "@fxtrot/ui": ["src/lib"]
    },
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
        "options": {
          "postcssOptions": {
            "useConfig": true
          }
        }
      }
    ]
  },
  "include": ["docs", "src", "public"],
  "exclude": ["node_modules"]
}
