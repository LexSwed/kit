{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      },
      {
        "name": "typescript-plugin-css-modules",
        "options": {
          "postcssOptions": {
            "useConfig": true
          }
        }
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "../shared/**/*.ts",
    "../shared/**/*.tsx",
    "../editor/**/*.ts",
    "../editor/**/*.tsx",
    "../ui/**/*.ts",
    "../ui/**/*.tsx",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
